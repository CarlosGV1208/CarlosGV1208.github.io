{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Financial Literacy Benchmark",
    "subtitle": [
      "Percentage of adults with understanding of some financial concepts.",
      "Source: S&P Global Financial Literacy Survey 2014 (last year available)."
    ],
    "anchor": "start",
    "fontSize": 18,
    "subtitleFontSize": 12,
    "offset": 20
  },
  "width": 650,
  "height": 350,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/vega/vega/master/docs/data/world-110m.json",
    "format": {"type": "topojson", "feature": "countries"}
  },
  "params": [
    {
      "name": "IndicatorSelect",
      "value": "financial knowledge",
      "bind": {
        "input": "select",
        "options": [
          "financial knowledge",
          "Risk Diversification",
          "Inflation",
          "Interest",
          "Interest Compounding"
        ],
        "labels": [
          "% of adults with financial knowledge",
          "Understand what Risk Diversification is",
          "Understand what Inflation is",
          "Understand what Interest is",
          "Understand what Interest Compounding is"
        ],
        "name": "Select Concept: "
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#d3d3d3",
        "stroke": "white",
        "strokeWidth": 0.5
      }
    },
    {
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/CarlosGV1208/CarlosGV1208.github.io/refs/heads/main/project/p1/p1_clean.csv",
              "format": {
                "type": "csv",
                "parse": {
                  "id": "number",
                  "financial knowledge": "number",
                  "Risk Diversification": "number",
                  "Inflation": "number",
                  "Interest": "number",
                  "Interest Compounding": "number"
                }
              }
            },
            "key": "id",
            "fields": [
              "Country",
              "financial knowledge",
              "Risk Diversification",
              "Inflation",
              "Interest",
              "Interest Compounding"
            ]
          }
        },
        {"calculate": "datum[IndicatorSelect]", "as": "selected_value"},
        {"calculate": "IndicatorSelect", "as": "concept_label"},
        {"filter": "isValid(datum.selected_value)"}
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "selected_value",
          "type": "quantitative",
          "title": "Percentage",
          "scale": {"scheme": "bluepurple", "domain": [0.1, 0.8]},
          "legend": {
            "orient": "bottom-left",
            "direction": "horizontal",
            "format": ".0%"
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "selected_value",
            "type": "quantitative",
            "title": "Value",
            "format": ".1%"
          },
          {"field": "concept_label", "title": "Topic Selected"}
        ]
      }
    }
  ],
  "config": {"view": {"stroke": null}}
}