{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Formal vs informal savings by demographic groups.",
    "subtitle": [
      "% of people who saved in a financial institution vs. those who saved outside the financial system.",
    
      "Source: World Bank, Global Findex 2025 ."
    ],
    "anchor": "start",
    "fontSize": 18,
    "subtitleFontSize": 13,
    "offset": 20
  },
  "width": 700,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/CarlosGV1208/CarlosGV1208.github.io/refs/heads/main/project/p4/savings.csv"
  },
  "params": [
    {
      "name": "LocationSelect",
      "value": "Region",
      "bind": {
        "input": "select",
        "options": ["Region", "Emerging market"],
        "labels": ["Region Level", "Emerging Economies"],
        "name": "1. Select View: "
      }
    },
    {
      "name": "DemoSelect",
      "value": "Total population (% age 15+)",
      "bind": {
        "input": "select",
        "options": [
          "Total population (% age 15+)",
          "Male (% age 15+)",
          "Female (% age 15+)",
          "Young (% ages 15-24)"
        ],
        "labels": ["Total Population", "Male", "Female", "Young"],
        "name": "   2. Group: "
      }
    },
    {
      "name": "highlight",
      "select": {"type": "point", "fields": ["Type"]},
      "bind": "legend"
    }
  ],
  "transform": [
    {
      "comment": "Filter by the selected view (Region or Market)",
      "filter": "datum.Location == LocationSelect"
    },
    {
      "comment": "Filter by the selected demographic group",
      "filter": "datum.Demographic == DemoSelect"
    },
    {
      "comment": "Only show Formal and Informal saving types",
      "filter": "datum.Type != 'Total saving'"
    }
  ],
  "mark": {
    "type": "bar",
    "cornerRadiusTopLeft": 5,
    "cornerRadiusTopRight": 5,
    "cursor": "pointer"
  },
  "encoding": {
    "x": {
      "field": "Country Name",
      "type": "nominal",
      "title": null,
      "axis": {
        "labelAngle": 0,
        "labelFontSize": 11
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "% of Population",
      "scale": {"zero": true}
    },
    "xOffset": {
      "field": "Type",
      "sort": ["Formal savings", "Informal savings"]
    },
    "color": {
      "field": "Type",
      "type": "nominal",
      "scale": {
        "scheme": "set2"
      },
      "legend": {
        "orient": "top",
        "direction": "horizontal",
        "title": null,
        "offset": 15,
        "symbolType": "circle",
        "labelFontSize": 11
      }
    },
    "opacity": {
      "condition": {"param": "highlight", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Country Name", "title": "Location"},
      {"field": "Demographic", "title": "Group"},
      {"field": "Type", "title": "Saving Type"},
      {"field": "value", "title": "Percentage (%)", "format": ".2f"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": true, "gridColor": "#f0f0f0"}
  }
}