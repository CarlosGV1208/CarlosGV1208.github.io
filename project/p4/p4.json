{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Savings: 2024 Demographic Analysis",
    "subtitle": "Comparison of formal and informal saving behaviors across world regions and emerging markets. Source: World Bank 2025.",
    "anchor": "start",
    "fontSize": 18,
    "subtitleFontSize": 13,
    "offset": 20
  },
  "width": 700,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/CarlosGV1208/CarlosGV1208.github.io/refs/heads/main/project/p4/savings.csv"
  },
  "params": [
    {
      "name": "LocationSelect",
      "value": "Region",
      "bind": {
        "input": "select",
        "options": ["Region", "Emerging market"],
        "labels": ["Region Level", "Emerging Economies"],
        "name": "1. Select View: "
      }
    },
    {
      "name": "TypeSelect",
      "value": "Informal saving",
      "bind": {
        "input": "select",
        "options": ["Total saving", "Formal saving", "Informal saving"],
        "labels": ["Total Savings", "Formal savings", "Informal savings"],
        "name": "   2. Saving Type: "
      }
    },
    {
      "name": "highlight",
      "select": {"type": "point", "fields": ["Demographic"]},
      "bind": "legend"
    }
  ],
  "transform": [
    {
      "filter": "datum.Type == TypeSelect"
    },
    {
      "filter": "datum.Location == LocationSelect"
    }
  ],
  "mark": {
    "type": "bar",
    "cornerRadiusTopLeft": 5,
    "cornerRadiusTopRight": 5,
    "cursor": "pointer"
  },
  "encoding": {
    "x": {
      "field": "Country Name",
      "type": "nominal",
      "title": null,
      "axis": {
        "labelAngle": 0,
        "labelFontSize": 11,
        "titleFontSize": 11
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "% of Population (Age 15+)",
      "scale": {"zero": true}
    },
    "xOffset": {
      "field": "Demographic",
      "sort": [
        "Total population (% age 15+)",
        "Male (% age 15+)",
        "Female (% age 15+)",
        "Young (% ages 15-24)"
      ]
    },
    "color": {
      "field": "Demographic",
      "type": "nominal",
      "scale": {
        "scheme": "observable10",
        "domain": [
          "Total population (% age 15+)",
          "Male (% age 15+)",
          "Female (% age 15+)",
          "Young (% ages 15-24)"
        ]
      },
      "legend": {
        "orient": "top",
        "direction": "horizontal",
        "title": null,
        "offset": 15,
        "symbolType": "circle",
        "labelFontSize": 11
      }
    },
    "opacity": {
      "condition": {"param": "highlight", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Country Name", "title": "Location"},
      {"field": "Demographic", "title": "Group"},
      {"field": "Type", "title": "Saving Type"},
      {"field": "value", "title": "Percentage (%)", "format": ".2f"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": true, "gridColor": "#f0f0f0"}
  }
}